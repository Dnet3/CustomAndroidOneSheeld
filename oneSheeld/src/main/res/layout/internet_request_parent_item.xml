<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="10dp"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/st"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/requestStatus" />

        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="visible"
            android:layout_centerInParent="true"
            style="@android:style/Widget.ProgressBar.Inverse"
            android:id="@+id/executingRequest" />
    </RelativeLayout>

    <com.integreight.onesheeld.utils.customviews.OneSheeldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/st"
        android:textColor="@color/textColorOnDark"
        android:textSize="15sp"
        android:gravity="left|center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:paddingRight="10dp"
        android:textStyle="bold"
        android:id="@+id/requestID"
        android:singleLine="true" />
</RelativeLayout>
