<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/speaker_shield_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buzzer_shield_25_volume"
        android:contentDescription="@string/app_name" />

    <com.integreight.onesheeld.utils.customviews.OneSheeldButton
        android:id="@+id/decreaseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/speaker_shield_imageview"
        android:layout_below="@id/speaker_shield_imageview"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/volume_down_selector" />

    <com.integreight.onesheeld.utils.customviews.OneSheeldButton
        android:id="@+id/increaseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/speaker_shield_imageview"
        android:layout_below="@id/speaker_shield_imageview"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/volume_up_selector" />

</RelativeLayout>