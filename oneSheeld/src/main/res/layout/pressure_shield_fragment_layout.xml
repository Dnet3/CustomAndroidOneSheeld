<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pressure_shield_screen_logo"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/light_sensor_value_square"
            android:gravity="center"
            android:minWidth="150dp"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <com.integreight.onesheeld.utils.customviews.OneSheeldTextView
                android:id="@+id/pressure_float_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="@color/offWhite"
                android:textSize="30sp"
                android:textStyle="bold" />

            <com.integreight.onesheeld.utils.customviews.OneSheeldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/sensors_units_hectopascal"
                android:textColor="@color/offWhite"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>