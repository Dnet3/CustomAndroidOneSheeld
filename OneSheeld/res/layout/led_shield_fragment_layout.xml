<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffad7">
    
  
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/shield_fragment_background"
            android:scaleType="fitXY"
            android:layout_margin="20dp"
            />
        <ImageView
            android:id="@+id/led_shield_led_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/led_shield_led_off"
            />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/led_shield_led_imageview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Toggle LED"
            android:onClick="toggleLed" />

</RelativeLayout>
