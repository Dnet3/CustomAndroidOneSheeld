<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:key="http://schemas.android.com/apk/res/com.integreight.onesheeld"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffad7" >

    <ImageView
        android:id="@+id/keypad_fragment_background_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/shield_fragment_background" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/Keypad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" >

            <LinearLayout style="@style/KeypadRow" >

                <com.integreight.onesheeld.utils.Key
                    android:id="@+id/keypad_key_1"
                    style="@style/Key.Numeric"
                    android:text="1"
                    key:column="0"
                    key:row="0" />

                <com.integreight.onesheeld.utils.Key
                    android:id="@+id/keypad_key_2"
                    style="@style/Key.Numeric"
                    android:text="2"
                    key:column="1"
                    key:row="0" />

                <com.integreight.onesheeld.utils.Key
                    android:id="@+id/keypad_key_3"
                    style="@style/Key.Numeric"
                    android:text="3"
                    key:column="2"
                    key:row="0" />

                <com.integreight.onesheeld.utils.Key
                    android:id="@+id/keypad_key_A"
                    style="@style/Key.Function"
                    android:text="A"
                    key:column="3"
                    key:row="0" />
            </LinearLayout>

            <LinearLayout style="@style/KeypadRow" >

                <com.integreight.onesheeld.utils.Key
                    android:id="@+id/keypad_key_4"
                    style="@style/Key.Numeric"
                    android:text="4"
                    key:column="0"
                    key:row="1" />

                <com.integreight.onesheeld.utils.Key
                    android:id="@+id/keypad_key_5"
                    style="@style/Key.Numeric"
                    android:text="5"
                    key:column="1"
                    key:row="1" />

                <com.integreight.onesheeld.utils.Key
                    android:id="@+id/keypad_key_6"
                    style="@style/Key.Numeric"
                    android:text="6"
                    key:column="2"
                    key:row="1" />

                <com.integreight.onesheeld.utils.Key
                    android:id="@+id/keypad_key_B"
                    style="@style/Key.Function"
                    android:text="B"
                    key:column="3"
                    key:row="1" />
            </LinearLayout>

            <LinearLayout style="@style/KeypadRow" >

                <com.integreight.onesheeld.utils.Key
                    android:id="@+id/keypad_key_7"
                    style="@style/Key.Numeric"
                    android:text="7"
                    key:column="0"
                    key:row="2" />

                <com.integreight.onesheeld.utils.Key
                    android:id="@+id/keypad_key_8"
                    style="@style/Key.Numeric"
                    android:text="8"
                    key:column="1"
                    key:row="2" />

                <com.integreight.onesheeld.utils.Key
                    android:id="@+id/keypad_key_9"
                    style="@style/Key.Numeric"
                    android:text="9"
                    key:column="2"
                    key:row="2" />

                <com.integreight.onesheeld.utils.Key
                    android:id="@+id/keypad_key_C"
                    style="@style/Key.Function"
                    android:text="C"
                    key:column="3"
                    key:row="2" />
            </LinearLayout>

            <LinearLayout style="@style/KeypadRow" >

                <com.integreight.onesheeld.utils.Key
                    android:id="@+id/keypad_key_Star"
                    style="@style/Key.Function"
                    android:text="*"
                    key:column="0"
                    key:row="3" />

                <com.integreight.onesheeld.utils.Key
                    android:id="@+id/keypad_key_0"
                    style="@style/Key.Numeric"
                    android:text="0"
                    key:column="1"
                    key:row="3" />

                <com.integreight.onesheeld.utils.Key
                    android:id="@+id/keypad_key_Hash"
                    style="@style/Key.Function"
                    android:text="#"
                    key:column="2"
                    key:row="3" />

                <com.integreight.onesheeld.utils.Key
                    android:id="@+id/keypad_key_D"
                    style="@style/Key.Function"
                    android:text="D"
                    key:column="3"
                    key:row="3" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/keypad_fragment_connect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="Connect" />
    </LinearLayout>

</RelativeLayout>