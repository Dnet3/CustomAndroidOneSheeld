<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    

    <style name="one_sheeld_action_bar_colored" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/action_bar_colored</item>
    </style>

    <style name="action_bar_colored" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#fffad7</item>
    </style>

    <style name="Keypad">
		<item name="android:orientation">vertical</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_weight">0</item>
		<item name="android:gravity">center</item>
		<item name="android:padding">4dp</item>
	</style>
	<style name="KeypadRow">
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center</item>
	</style>
	<style name="Key" parent="@android:style/Widget.Button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_margin">4dp</item>
		<item name="android:background">@drawable/keypad_key</item>
		<item name="android:textColor">@color/normal_control</item>
		<item name="android:textSize">@dimen/key_label</item>
	</style>
	<style name="Key.Numeric">
		
	</style>
	<style name="Key.Function">
		<item name="android:visibility">invisible</item>
	</style>
	<style name="Key.Disabled">
		<item name="android:clickable">false</item>
		<item name="android:visibility">invisible</item>
	</style>

</resources>
